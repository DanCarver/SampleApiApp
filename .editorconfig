# EditorConfig is awesome : http://EditorConfig.org

# top-most EditorConfig file
root = true
[*]
indent_style = space
indent_size = 2
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
end_of_line = crlf

# Trailing whitespace is important in md files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# This file is generated by a tool and we dont to reformat it every time we generate
[ExampleProject.cs]
indent_style = tab
indent_size = 2